# FRCM API Configuration
# Copy this file to .env and configure your settings

# API Authentication
# Comma-separated list of valid API keys
# Leave empty to disable authentication (not recommended for production)
FRCM_API_KEYS=your-secret-api-key-1,your-secret-api-key-2

# Server Configuration
FRCM_HOST=0.0.0.0
FRCM_PORT=8443

# SSL/TLS Configuration
# Paths to SSL certificate and private key
# If files don't exist, a self-signed certificate will be generated
FRCM_SSL_CERT=./ssl/cert.pem
FRCM_SSL_KEY=./ssl/key.pem

# Security Settings
# Set to False to disable HTTPS (not recommended for production)
FRCM_REQUIRE_HTTPS=True
# Fire Risk Calculation Model - Notification Service Configuration
# Copy this file to .env and configure as needed

# Enable/disable notifications
FRCM_NOTIFICATIONS_ENABLED=false

# MQTT Broker Configuration
FRCM_MQTT_BROKER_HOST=localhost
FRCM_MQTT_BROKER_PORT=1883
FRCM_MQTT_TOPIC=frcm/fire-danger

# Optional: MQTT Authentication
# FRCM_MQTT_USERNAME=your_username
# FRCM_MQTT_PASSWORD=your_password

# Optional: Custom client ID
# FRCM_MQTT_CLIENT_ID=frcm-notifier

# Scheduled Worker Configuration
# Update interval for weather data fetching (in seconds)
# Default: 60 (1 minute)
FRCM_WORKER_UPDATE_INTERVAL=60

# Number of hours to fetch in weather forecast
# Default: 48 (2 days)
FRCM_WORKER_FORECAST_HOURS=48

# Output directory for weather data and fire risk CSV files
# Default: current directory
FRCM_WORKER_OUTPUT_DIR=./output
