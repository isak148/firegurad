# FRCM API Configuration
# Copy this file to .env and configure your settings

# API Authentication
# Comma-separated list of valid API keys
# Leave empty to disable authentication (not recommended for production)
FRCM_API_KEYS=your-secret-api-key-1,your-secret-api-key-2

# Server Configuration
FRCM_HOST=0.0.0.0
FRCM_PORT=8443

# SSL/TLS Configuration
# Paths to SSL certificate and private key
# If files don't exist, a self-signed certificate will be generated
FRCM_SSL_CERT=./ssl/cert.pem
FRCM_SSL_KEY=./ssl/key.pem

# Security Settings
# Set to False to disable HTTPS (not recommended for production)
FRCM_REQUIRE_HTTPS=True
